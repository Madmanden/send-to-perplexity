{
  "manifest_version": 3,
  "name": "Send to Perplexity",
  "version": "1.0",
  "description": "Send current URL to Perplexity with custom prompts",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Send to Perplexity"
  },
  "background": {
    "service_worker": "background.js"
  }
}
